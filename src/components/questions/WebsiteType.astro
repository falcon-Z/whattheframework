---
import { WebsiteType } from "../../data/types";
import { SupportingInfo } from "../../data/supporting-info";
const types = Object.values(WebsiteType).map((value) => value);
---

<h1 class="text-3xl m-8 text-center">What type of website are you building?</h1>
<div class="container mx-auto w-11/12 grid md:grid-cols-3 gap-4">
  {
    types.map((type) => (
      <a
        class="col-span-1 flex flex-col justify-around items-center p-4 
        bg-gray-100 dark:bg-gray-800 
        group 
        shadow-md hover:shadow-xl rounded-lg
        hover:bg-gradient-to-bl from-transparent via-green-300  to-transparent
        dark:via-green-900
        transition-all duration-200
        "
        href={type.toLowerCase()}
      >
        <div class="mb-8">
          <p class="text-lg ">{SupportingInfo.websiteType[type].description}</p>
        </div>
        <div class="flex flex-wrap gap-2">
          {SupportingInfo.websiteType[type].examples.map((example: string) => (
            <span
              class="border border-green-500 border-opacity-50 hover:border-opacity-100
            rounded-2xl
            hover:bg-green-400 dark:hover:bg-green-800 bg-opacity-50
            "
            >
              <small class="text-xs p-4">{example}</small>
            </span>
          ))}
        </div>
      </a>
    ))
  }
</div>
